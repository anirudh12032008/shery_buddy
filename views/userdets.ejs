<%- include ("./components/header.ejs") %>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-4 border-b">
            <h1 class="text-2xl font-bold text-gray-800">User Details</h1>
        </div>
        <div class="p-4">
            <div class="flex justify-between items-center mb-4">
                <div>
                    <p class="text-lg font-semibold text-gray-800">Username: <%= user.username %></p>
                    <p class="text-lg font-semibold text-gray-800">Full Name: <%= user.fullname %></p>
                    <p class="text-lg font-semibold text-gray-800">Points: <%= user.points || 0 %></p>
                    <p class="text-lg font-semibold text-gray-800">Batches: <%= user.batches.join(', ') %></p>
                    <p class="text-lg font-semibold text-gray-800">Languages: <%= user.languages.join(', ') %></p>
                </div>
            </div>
            <div>
                <h2 class="text-xl font-semibold text-gray-800">Solved Problems</h2>
                <table class="w-full mt-4">
                    <thead>
                        <tr>
                            <th class="py-2 px-4 bg-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Problem ID</th>
                            <th class="py-2 px-4 bg-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Title</th>
                            <th class="py-2 px-4 bg-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Difficulty</th>
                            <th class="py-2 px-4 bg-gray-200 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% user.solved.forEach((problemId) => { %>
                            <% const problem = problems.find((p) => p.id.toString() === problemId.toString()); %>
                            <% if (problem) { %>
                                <tr>
                                    <td class="py-2 px-4 border-b border-gray-200 text-sm"><%= problem.id %></td>
                                    <td class="py-2 px-4 border-b border-gray-200 text-sm"><%= problem.title %></td>
                                    <td class="py-2 px-4 border-b border-gray-200 text-sm">
                                        <span class="
                                            <% if (problem.difficulty === 'easy') { %>
                                                text-green-500
                                            <% } else if (problem.difficulty === 'medium') { %>
                                                text-yellow-500
                                            <% } else if (problem.difficulty === 'hard') { %>
                                                text-red-500
                                            <% } else { %>
                                                text-gray-500
                                            <% } %>
                                        ">
                                            <%= problem.difficulty %>
                                        </span>
                                    </td>
                                                                        <td class="py-2 px-4 border-b border-gray-200 text-sm"><%= problem.points %></td>
                                </tr>
                            <% } %>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include ("./components/footer.ejs") %>
