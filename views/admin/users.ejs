<%- include ("../components/header.ejs") %>

    <div class="container mx-auto">
        <h1 class="text-3xl font-bold mb-4">Select Batch</h1>
        <div id="batchButtons" class="flex flex-wrap gap-4">
            <% batches.forEach(batch => { %>
                <button onclick="redirectToBatch('/admin/users/<%= batch %>')" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600 transition duration-300">
                    <%= batch %>
                </button>
            <% }); %>
        </div>
    </div>

    <script>
        function redirectToBatch(url) {
            window.location.href = url;
        }
    </script>
